<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
            motion:constraintSetEnd="@+id/middle"
            motion:constraintSetStart="@+id/start"
            motion:duration="500" />

    <ConstraintSet android:id="@+id/start">

        <Constraint android:id="@+id/actor_image_custom">
            <Layout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    motion:layout_constraintTop_toTopOf="@+id/guideline1"
                    motion:layout_constraintBottom_toBottomOf="@+id/guideline1"
                    motion:layout_constraintStart_toStartOf="@+id/guideline2"
                    motion:layout_constraintEnd_toEndOf="@+id/guideline3"/>
            <PropertySet android:visibility="invisible"/>
        </Constraint>

    </ConstraintSet>


    <ConstraintSet android:id="@+id/middle"
            motion:deriveConstraintsFrom="@+id/start">

        <Constraint android:id="@+id/actor_image_custom">
            <Layout
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    motion:layout_constraintTop_toTopOf="@+id/guideline1"
                    motion:layout_constraintBottom_toBottomOf="@+id/guideline1"
                    motion:layout_constraintStart_toStartOf="@+id/guideline2"
                    motion:layout_constraintEnd_toEndOf="@+id/guideline3"/>
            <PropertySet android:visibility="visible" />
        </Constraint>

    </ConstraintSet>

</MotionScene>